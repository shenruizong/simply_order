                <Button Content="菜品4" Height="48" Name="button4" Width="75" Background="#FF9AEC73" />
                <Button Content="菜品5" Height="48" Name="button5" Width="75" Background="#FF9AEC73" />
                <Button Content="菜品6" Height="48" Name="button6" Width="75" Background="#FF9AEC73" />
                <Button Content="菜品7" Height="48" Name="button7" Width="75" Background="#FF9AEC73" />
                <Button Content="菜品8" Height="48" Name="button8" Width="75" Background="#FF9AEC73" />
