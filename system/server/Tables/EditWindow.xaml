<Window x:Class="server.Tables.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EditWindow" Height="186" Width="307">
    <Grid>
        <Label Content="桌台号" Height="28" HorizontalAlignment="Left" Margin="22,12,0,0" Name="label1" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="74,14,0,0" Name="TableNameBox" VerticalAlignment="Top" Width="178" Text="{Binding name}" IsEnabled="False" />
        <Button Content="保存" Height="21" HorizontalAlignment="Left" Margin="22,63,0,0" Name="SaveButton" VerticalAlignment="Top" Width="75" Visibility="Hidden" Click="SaveButton_Click" />
        <Button Content="编辑" Height="23" HorizontalAlignment="Left" Margin="22,62,0,0" Name="EditButton" VerticalAlignment="Top" Width="75" Click="EditButton_Click" />
        <Button Content="删除" Height="23" HorizontalAlignment="Left" Margin="103,63,0,0" Name="DelButton" VerticalAlignment="Top" Width="75" Click="DelButton_Click" />
        <Button Content="取消" Height="23" HorizontalAlignment="Left" Margin="184,63,0,0" Name="CancelButton" VerticalAlignment="Top" Width="75" Click="CancelButton_Click" />
    </Grid>
</Window>
